{% extends 'layout/base.html.twig' %}

{% form_theme atmInfrastructureForm 'bootstrap_4_layout.html.twig' %}

{% block body %}
    {{ form_start(atmInfrastructureForm) }}
        {{ form_widget(atmInfrastructureForm) }}
        <button type="submit" class="btn btn-success">Success</button>
    {{ form_end(atmInfrastructureForm) }}
    <div class="raw" style="margin-top: 15px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Type</th>
                    <th scope="col">Lat</th>
                    <th scope="col">Long</th>
                    <th scope="col">Address</th>
                    <th scope="col">Place</th>
                    <th scope="col">City</th>
                    <th scope="col">Schedule</th>
                </tr>
            </thead>
            <tbody>
                {% for atm in atmResult %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ atm.type }}</td>
                        <td>{{ atm.latitude }}</td>
                        <td>{{ atm.longitude }}</td>
                        <td>{{ atm.fullAddressRu }}</td>
                        <td>{{ atm.placeRu }}</td>
                        <td>{{ atm.cityRU }}</td>
                        <td>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Mon</th>
                                        <th scope="col">Tue</th>
                                        <th scope="col">Wed</th>
                                        <th scope="col">Thu</th>
                                        <th scope="col">Fri</th>
                                        <th scope="col">Sat</th>
                                        <th scope="col">Sun</th>
                                        <th scope="col">Hol</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ atm.tw.mon }}</td>
                                        <td>{{ atm.tw.tue }}</td>
                                        <td>{{ atm.tw.wed }}</td>
                                        <td>{{ atm.tw.thu }}</td>
                                        <td>{{ atm.tw.fri }}</td>
                                        <td>{{ atm.tw.sat }}</td>
                                        <td>{{ atm.tw.sun }}</td>
                                        <td>{{ atm.tw.hol }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}